{
  "name": "fykosak/web-fol",
  "keywords": [
    "nette"
  ],
  "type": "project",
  "license": [
    "MIT",
    "BSD-3-Clause",
    "GPL-2.0",
    "GPL-3.0"
  ],
  "require": {
    "php": ">= 7.4",
    "nette/nette": "^v3.1.0",
    "fykosak/nette-fksdb-downloader": "dev-master#9c5e491",
    "fykosak/nette-fks-utils": "dev-dev-context-translator",
    "ext-soap": "*",
    "ext-dom": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "68publishers/asset": "^3.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.6.0",
    "nette/tester": "^v2.4.1",
    "phpstan/phpstan": "1.10.21"
  },
  "scripts": {
    "clearTestCache": "rm -rf temp/tester/",
    "startMockApi": [
      "mkdir -p temp/tester/log",
      "nohup python3 tests/api/api.py > temp/tester/log/api-info.log 2> temp/tester/log/api-err.log < /dev/null &"
    ],
    "killMockApi": "kill -9 $(ps aux | grep 'python3 tests/api/api.py' | head -n1 | awk '{print $2}')",
    "testPSR": "php -e vendor/squizlabs/php_codesniffer/bin/phpcs --standard=PSR12 app/",
    "testPHPStan": "vendor/bin/phpstan analyse app tests",
    "test": [
      "@clearTestCache",
      "@startMockApi",
      "vendor/bin/tester tests/ -p php -s -c tests/php.ini -j 8",
      "@killMockApi"
    ],
    "testCoverage": [
      "@clearTestCache",
      "@startMockApi",
      "vendor/bin/tester tests -p php --coverage coverage.html --coverage-src app -s -c tests/php.ini -j 8",
      "@killMockApi"
    ]
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Tests\\": "tests/"
    }
  }
}
