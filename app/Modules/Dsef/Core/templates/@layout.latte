<body>

{block body}
    {control navigation "/images/logos/dsef2023_logo_white.png", "DSEF " . $gamePhaseCalculator->getFKSDBEvent()->begin->format('Y')}
    <main>
        {block main}
            <div class="panel color-light">
                <section class="inner-container">
                    {ifset subtitle}<div class="subheader">{include subtitle}</div>{/ifset}
                    {ifset title}<h1>{include title}</h1>{/ifset}
                    {include content}
                </section>
            </div>
        {/block}
    </main>
    <footer>
        <div class="panel registration">
            <div class="inner-container">
                <div class="text">
                    {switch $lang}
                        {case 'cs'}Zaujala vás akce?
                        {default}Are you interested?
                    {/switch}
                </div>
                {if $gamePhaseCalculator->isRegistration(App\Models\GamePhaseCalculator::NOW)}
                    <a n:href=":Default:Registration:" class="btn btn-outline-light">{switch $lang}{case 'cs'}Zaregistrovat se{default}Registration{/switch}</a>
                {else}
                    {if $gamePhaseCalculator->isRegistration(App\Models\GamePhaseCalculator::BEFORE)}
                        {switch $lang}
                            {case 'cs'}Registrace se otevře v říjnu!
                            {default} Registration will open in October!
                        {/switch}
                    {else}
                        {switch $lang}
                            {case 'cs'}Registrace na další ročník ještě není otevřena.
                            {default} Registration for the next year is not open yet.
                        {/switch}
                    {/if}
                {/if}
            </div>
        </div>

        <div class="panel sponsors">
            <div class="inner-container">
                <div class="sponsors-row">
                    <a href="https://www.mff.cuni.cz/" style="text-align: center">
                        <div class="text">
                            {switch $lang}
                                {case 'cs'}Organizátor akce
                                {default}Competition Organizer
                            {/switch}
                        </div>
                        <img src="{$basePath}/images/logos/mff.png" alt="MFF logo" style="max-height: 6rem; max-width: 13rem">
                    </a>
                    <a href="https://www.msmt.cz/" style="text-align: center">
                        <div class="text">
                            {switch $lang}
                                {case 'cs'}Organizátor akce
                                {default}Competition Organizer
                            {/switch}
                        </div>
                        <img src="{$basePath}/images/logos/msmt_cs.jpg" alt="MŠMT logo" style="max-height: 6rem; max-width: 13rem">
                    </a>
                    <a href="https://www.iaps.info/" style="text-align: center">
                        <div class="text">
                            {switch $lang}
                                {case 'cs'}Partner
                                {default}Partner
                            {/switch}
                        </div>
                        <img src="{$basePath}/images/logos/iaps_logo.png" alt="IAPS logo" style="max-height: 6rem; max-width: 13rem">
                    </a>
                </div>
            </div>
        </div>
        <div class="panel footer">
            <div class="inner-container row">
                <div class="col-md-6">
{*                    <img class="logo" src="{$basePath}/images/logo.svg" alt="DSEF" />*}
                    <div class="logo" style="font-size: 1cm; font-weight: bold">DSEF<small>.cz</small></div>
                    <p>
                        DSEF je organizován <a href="https://fykos.cz/">FYKOSem</a> &#8211 skupinou vysokoškolských studentů pořádající 36. rokem vzdělávací akce se zaměřením na fyziku. FYKOS je tvořen převážně studenty
                        <a href="https://www.mff.cuni.cz/">Matematicko-fyzikální fakulty Univerzity Karlovy</a>.
                    </p>
                    <p>
                        Realizace projektu byla podpořena Ministerstvem školství, mládeže a&nbsp;tělovýchovy.
                    </p>
                    <p>
                        <strong>#fykos</strong> <strong>#dsef</strong> <a href="mailto:dsef@dsef.cz">dsef@dsef.cz</a>
                    </p>
                    <div class="other-logos">
                        <a target="_blank" href="https://fykos.cz/"><img class="other-logo" src="{$basePath}/images/logos/fykos_logo_white.png" alt="FYKOS" style="max-height: 2rem; margin: 0 1rem 1rem 0" /></a>
                        <a target="_blank" href="{switch $lang}{case 'cs'}https://online.fyziklani.cz/{default}https://online.fyziklani.org/{/switch}"><img class="other-logo" src="{$basePath}/images/logos/fyziklani_online_{$lang}.svg"style="max-height: 2rem; margin: 0 1rem 1rem 0"/></a>
                        <a target="_blank" href="{switch $lang}{case 'cs'}https://fyziklani.cz/{default}https://fyziklani.org/{/switch}"><img class="other-logo" src="{$basePath}/images/logos/fyziklani_white_logo.svg"style="max-height: 2rem; margin: 0 1rem 1rem 0"/></a>
                    </div>
                </div>
{*                <div class="col-md-3">
                    <nav>
                        <ul>
                            {switch $lang}
                                {case cs}
                                <li>Pro účastníky a učitele
                                    <ul>
                                        <li><a n:href=":Default:AboutTheCompetition:">O soutěži</a></li>
                                        <li><a n:href=":Default:Rules:">Pravidla</a></li>
                                        <li><a n:href=":Default:Schedule:">Program</a></li>
                                        {if $gamePhaseCalculator->isRegistration(App\Models\GamePhaseCalculator::NOW)}
